# Ambiente (development ou production)
FLASK_ENV=development

# Chave secreta da aplicação
SECRET_KEY=troque_para_alguma_coisa_secreta

# Banco de dados (PostgreSQL)
DATABASE_URL=postgresql+psycopg2://arkiv_user:senha@localhost:5432/arkiv

# Redis (para Celery e rate limiting)
REDIS_URL=redis://localhost:6379/0

# Tipo de armazenamento: "local" ou "s3"
STORAGE_TYPE=local

# Se for usar S3 (ou MinIO)
S3_BUCKET_NAME=arkiv-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=AKIA…
S3_SECRET_ACCESS_KEY=…

# Stripe (se for cobrança/SaaS)
STRIPE_SECRET_KEY=sk_test_…
STRIPE_PUBLIC_KEY=pk_test_…

# CORS (origens permitidas para API Mobile)
CORS_ORIGINS=http://localhost:5000,https://meuappmobile.com
